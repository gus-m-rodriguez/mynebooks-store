######################################
# 🌐 CONFIGURACIÓN GENERAL DEL PROYECTO
######################################
NODE_ENV=development
APP_NAME=MyneBooks
APP_BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3000
ORIGIN=http://localhost:5173

######################################
# 🗄️ BASE DE DATOS (PostgreSQL)
######################################
PGHOST=localhost
PGPORT=5432
PGDATABASE=mynebooks
PGUSER=postgres
PGPASSWORD=admin

######################################
# 🔑 AUTENTICACIÓN Y JWT
######################################
JWT_SECRET=tu_jwt_secret_super_seguro
JWT_EXPIRATION=1d

######################################
# 💳 MERCADO PAGO
######################################
MP_PUBLIC_KEY=tu_public_key
MP_ACCESS_TOKEN=tu_access_token
MP_WEBHOOK_SECRET=tu_webhook_secret
MP_USE_SANDBOX=true

MP_SUCCESS_URL=http://localhost:5173/pago/exito
MP_FAILURE_URL=http://localhost:5173/pago/error
MP_PENDING_URL=http://localhost:5173/pago/pendiente
MP_NOTIFICATION_URL=http://localhost:3000/api/webhooks/mp

######################################
# 📦 AMAZON AWS (S3)
######################################
AWS_ACCESS_KEY_ID=tu_aws_access_key_id
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key
AWS_REGION=sa-east-1
AWS_S3_BUCKET=mynebooks-portadas
AWS_S3_BASE_URL=https://mynebooks-portadas.s3.sa-east-1.amazonaws.com
AWS_S3_PRESIGN_TTL_SECONDS=900

######################################
# ✉️ CONFIGURACIÓN DE CORREO (Gmail OAuth2)
######################################
EMAIL_FROM=tu_email@gmail.com
GMAIL_CLIENT_ID=tu_gmail_client_id
GMAIL_CLIENT_SECRET=tu_gmail_client_secret
GMAIL_REFRESH_TOKEN=tu_gmail_refresh_token
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

EMAIL_MAX_PER_USER_PER_DAY=10
EMAIL_MAX_PER_IP_PER_DAY=20

######################################
# ⚙️ PARÁMETROS DE APLICACIÓN
######################################
RESERVA_TTL_MINUTOS=15
BLOQUEO_TTL_MINUTOS=15
CORS_ALLOWED_ORIGINS=http://localhost:5173

######################################
# 🍪 COOKIES / SESIÓN
######################################
TOKEN_COOKIE_SECURE=false
TOKEN_COOKIE_SAMESITE=None
TOKEN_COOKIE_DOMAIN=localhost
